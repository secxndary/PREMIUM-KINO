<Window x:Class="PREMIUM_KINO.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PREMIUM_KINO"
        mc:Ignorable="d"
        Title="ПРЕМИУМ КИНО" Height="528" Width="960"
        WindowStartupLocation="CenterScreen"
        MinWidth="840" MinHeight="480">

    
    <Grid Style="{DynamicResource hello}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.35*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Button Width="0" Height="0" IsCancel="True"
                Command="{Binding escapeAuthCommand}">
            <Button.DataContext>
                <local:ClosingViewModel></local:ClosingViewModel>
            </Button.DataContext>
        </Button>


        <Image Source="./Resources/back-orange.jpg" HorizontalAlignment="Left"
               VerticalAlignment="Center" />

        <Frame Grid.Column="1" Source="/Login.xaml" Name="frameAuth" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
